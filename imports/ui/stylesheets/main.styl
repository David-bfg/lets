body, input
  font-family sans-serif
  font-size 12pt

body
  max-width 400px
  margin auto
  padding 24px

a
  color #674CD8
  cursor pointer
  text-decoration none

a:hover
  color #8669ff

h1, h2
  margin 0
  text-align center

h1
  color #674CD8
  font-weight lighter

h2
  color #999
  font-weight lighter

input
  padding 6px 12px
  border solid 1px #ccc
  border-radius 3px
  display block
  width 100%
  box-sizing border-box

form
  margin 12px 0

hr
  border none
  height 1px
  background #674CD8

.thread .actions
  padding 0 12px

.post .action
  float right
