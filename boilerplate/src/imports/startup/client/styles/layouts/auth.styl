.auth-layout
	display flex
	justify-content center
	height 100%
	&_card
		min-width 320px
	&_card-header
		.logo
			margin 0 auto 10px auto
			display table
	&_inner
		padding 30px 0
		text-align center
	&_submit
		padding 15px 30px
		margin-top 20px
		font-weight bold
	&_footer
		display table
		width 100%
		margin-top 20px
		a
			display table
			font-size 22px
			margin 0 auto
			line-height 32px
			color $colorPrimary
		
	// Extend UI
	.el-form-item
		&:last-child
			margin-bottom 0
  