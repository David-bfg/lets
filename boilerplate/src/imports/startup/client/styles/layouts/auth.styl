.auth-layout
	display flex
	justify-content center
	height 100%
	a
		text-decoration none
		&:hover
			text-decoration underline
	&_card
		min-width 320px
	&_card-header
		h2
			font-size 26px
			font-weight 500
			margin 15px 0 40px 0
		.logo
			margin 0 auto 10px auto
			display table
	&_inner
		padding 30px 0
		text-align center
	&_submit
		padding 15px 0
		margin-top 20px
		font-weight bold
		font-size 18px
	&_footer
		display table
		width 100%
		margin-top 20px
		a
			display table
			font-size 22px
			margin 0 auto
			line-height 32px
			color $colorPrimary
	.el-form-item
		&:last-child
			margin-bottom 0
.register
	width 600px