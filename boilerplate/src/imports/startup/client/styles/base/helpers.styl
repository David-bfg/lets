.full-width
  width 100%
.divider
  position relative
  height 1px
  display table
  width 100%
  background var(--color-divider)
  opacity .4
  margin 20px 0
  &:before
    width 12px
    height 12px
    background var(--color-divider)
    border 8px solid #fff
    content ""
    position absolute
    left 50%
    top -14px
    margin-left -16px
    border-radius 50%